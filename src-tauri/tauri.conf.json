{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "poweron",
  "version": "0.1.1",
  "identifier": "com.xart.poweron",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Графік відключнь",
        "width": 1000,
        "minWidth": 600,
        "height": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}